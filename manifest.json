{
	"manifest_version": 3,

	"name": "Muhestores Extension",
	"description": "Muhestores extension for Chrome",
	"version": "1.0",
	"author": "@FabMak",
	"externally_connectable": {
        "ids":["*"],
		"matches":["http://localhost/index.html"]
    },

	//"background": {
	//	"service-worker": "popup2.js"

	//},

	"permissions": [
        "tabs",
		"activeTab",
		"storage",
		"scripting"
		//"https://*/asos.com/*/",
       // "https://www.boohoo.com/*/"
		
        //"http://*/",
        //"https://*/"
		
    ],
	
  "host_permissions": [
     // "https://*/asos.com/*/",
     //   "https://www.boohoo.com/*/",
		"http://localhost/index.html"
   ],
	"action": {
		"default_popup": "popup.html",
		
		"default_icon":{
       // "16": "images/icon-16.png",
      //  "32": "images/icon-32.png"
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
        }
	}
	
}