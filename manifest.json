{
  "manifest_version": 3,

  "name": "Muhestores Extension",
  "description": "Muhestores extension for Chrome",
  "version": "2.2.1",
  "author": "FabMab",

  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "https://beta-muhestores.muhemax.com/*",
    "https://muhestores.com/*"
  ],
  "action": {
    "default_popup": "popup.html",

    "default_icon": {
      "16": "/images/icon-16.png",
      "32": "/images/icon-32.png",
      "48": "/images/icon-48.png",
      "128": "/images/icon-128.png"
    }
  },

  "icons": {
    "16": "/images/icon-16.png",
    "32": "/images/icon-32.png",
    "48": "/images/icon-48.png",
    "128": "/images/icon-128.png"
  }

}